# Global environment variables for Docker Compose
# These variables are used across all services

# Compose project name (affects container and network names)
COMPOSE_PROJECT_NAME=censeo

# Development environment flag
ENVIRONMENT=development

# Default ports (can be overridden if needed)
BACKEND_PORT=8000
FRONTEND_PORT=3000
DATABASE_PORT=5432

# Database configuration
POSTGRES_DB=censeo_dev
POSTGRES_USER=censeo_user
POSTGRES_PASSWORD=censeo_dev_password

# Build arguments
PYTHON_VERSION=3.11
NODE_VERSION=18