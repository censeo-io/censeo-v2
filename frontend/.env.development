# React development environment variables

# API URL for development
REACT_APP_API_URL=http://localhost:8000/api

# Enable fast refresh for hot reloading
FAST_REFRESH=true

# Polling for file changes (useful in Docker environments)
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Skip preflight check for faster starts
SKIP_PREFLIGHT_CHECK=true

# Browser auto-open (set to false to prevent opening browser)
BROWSER=none

# Development server configuration
HOST=0.0.0.0
PORT=3000

# Enable source maps for debugging
GENERATE_SOURCEMAP=true